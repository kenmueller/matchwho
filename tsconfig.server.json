{
	"compilerOptions": {
		"module": "es2020",
		"target": "es2019",
		"outDir": "server-build",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"incremental": true,
		"typeRoots": ["node_modules/@types", "server/@types"]
	},
	"include": ["server"],
	"exclude": ["node_modules"]
}
